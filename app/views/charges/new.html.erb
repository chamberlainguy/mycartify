<%= form_tag charges_path do %>
  <article>
    <label class="amount">
      <p>Amount to pay: <%= number_to_currency(@current_buyer.cart_total_amount) %> AUD</p>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="myCartify Payment"
          data-email=<%= @current_buyer.email %>
          data-amount=<%= @current_buyer.cart_total_amount * 100 %>
          data-locale="auto"></script>
<% end %>