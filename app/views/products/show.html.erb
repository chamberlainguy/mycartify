<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Sale Price:</strong>
  <%= number_to_currency(@product.price) %>
</p>

<p>
  <strike><strong>List price:</strong>
  <%= number_to_currency(@product.list_price) %></strike>
</p>

<p>
  <!-- <strong>Image:</strong> -->
  <%= image_tag @product.image, width: 400 %>
</p>

<!-- <p>
  <strong>Available:</strong>
  <%= @product.available %>
</p>
 -->
<p>
  <strong>Quantity Available:</strong>
  <%= number_with_delimiter(@product.quantity) %>
</p>

<p>
  <strong>Postage Cost:</strong>
  <%= @product.postage %>
</p>

<p>
  <strong>Category:</strong>
  <%= @product.category.name %>
</p>

<br>
<%= button_to 'Add to Cart', addtocart_path(id: @product), method: :post, class: "btn btn-primary"  %>
<br>

<% if @product.also_bought.present? %>
  <h2>Customers who bought <%= @product.name %> also bought:</h2>
<% end %>

<% @product.also_bought.each do |product| %>
      <div class="col-md-3" id="product-tile">
        <p><%= link_to product.name, product %></p>
        <p><%= image_tag product.image, height: "130" %></p>
        <p>Qty Available:<%= number_with_delimiter(product.quantity) %></p>
        <p>Sale Price:<%= number_to_currency(product.price) %></p>
        <p><strike>List Price:<%= number_to_currency(product.list_price) %></strike></p>
        <p>Postage:<%= number_to_currency(product.postage) %></p>
        <p>Category:<%= product.category.name %></p>
      </div>
<% end %>

<br><br>

<div class='col-md-12'>
  <br><br>
  <h2><%= link_to 'Back', products_path %></h2>
</div>

