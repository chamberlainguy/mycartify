<p id="notice"><%= notice %></p>

<h1 class="heading">Listing Buyers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Password digest</th>
      <th>Address</th>
      <th>Suburb</th>
      <th>City</th>
      <th>State</th>
      <th>Post code</th>
      <th>Country</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @buyers.each do |buyer| %>
      <tr>
        <td><%= buyer.name %></td>
        <td><%= buyer.email %></td>
        <td><%= buyer.password_digest %></td>
        <td><%= buyer.address %></td>
        <td><%= buyer.suburb %></td>
        <td><%= buyer.city %></td>
        <td><%= buyer.state %></td>
        <td><%= buyer.post_code %></td>
        <td><%= buyer.country %></td>
        <td><%= link_to 'Show', buyer %></td>
        <td><%= link_to 'Edit', edit_buyer_path(buyer) %></td>
        <td><%= link_to 'Destroy', buyer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

